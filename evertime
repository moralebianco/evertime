#!/bin/sh

sem=0
tmp_path='/tmp/evertime'

start() {
	if test -z "$1"
	then
		usage
	fi
	( ./evertime '__sh' "$1" & )
}

_stop() {
	if test -f $tmp_path
	then
		kill "$(head -1 $tmp_path)"
		rm -f $tmp_path
	fi
}

usage() {
	echo 'usage: evertime <command> [<arg>]'
	exit 1
}

__sh() {
	fn=db/$1
	rp='([0-9]*) ([0-9]*) <'

	echo $$ > $tmp_path
	echo "$(date +%s) $(date +%s) <" >> "$fn"

	while [ $sem = 0 ]
	do
		sleep 1m
		sed -i -E "s/$rp/\1 $(date +%s) </g" "$fn"
	done

	sed -i -E "s/$rp/\1 \2/g" "$fn"
}

main() {
	mkdir -p 'db/'
	case $1 in
		start)  start "$2";;
		stop)   _stop;;
		*)      usage;;
	esac
}

if test '__sh' = "$1"
then
	trap 'sem=1' TERM
	__sh "$2"
else
	main "$@"
fi
