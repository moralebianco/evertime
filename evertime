#!/bin/sh

sem=0
tmp='/tmp/evertime'
dbp=$HOME'/.evertime'

start() {
	test -n "$1" || usage
	( ./evertime '__sh' "$1" & )
}

_stop() {
	if test -f $tmp
	then
		kill "$(cat $tmp)"
		rm $tmp
	fi
}

usage() {
	echo 'Usage: evertime <command> [<arg>]' 1>&2
	exit 1
}

__sh() {
	fn=$dbp/$1
	rp='([0-9]*) ([0-9]*) <'

	echo $$ > $tmp
	echo "$(date +%s) $(date +%s) <" >> "$fn"

	while [ $sem = 0 ]
	do
		sleep 1m
		sed -i -E "s/$rp/\1 $(date +%s) </g" "$fn"
	done

	sed -i -E "s/$rp/\1 \2/g" "$fn"
}

main() {
	mkdir -p "$dbp"
	case $1 in
		start)  start "$2";;
		stop)   _stop;;
		*)      usage;;
	esac
}

if test '__sh' = "$1"
then
	trap 'sem=1' TERM
	__sh "$2"
else
	main "$@"
fi
